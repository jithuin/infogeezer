<UserControl x:Class="DecimalInternetClock.Clocks.View.BinaryHexDigitView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vc="clr-namespace:DecimalInternetClock.ValueConverters"
             x:Name="this"

             >
    <UserControl.Resources>
        <vc:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></vc:BooleanToVisibilityConverter>
    </UserControl.Resources>
    <Viewbox>
        <Grid Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--<Ellipse DataContext="{Binding ElementName=this}" StrokeThickness="10" Stroke="{Binding Foreground}" Width="100" Height="100"></Ellipse>-->
            <Path StrokeThickness="10"
              Data="M 0,50 A 50,50 90 0 1 50,0"
              Stroke="{Binding ElementName=this, Path=Foreground}">
                <Path.Style>
                    <Style TargetType="Path">
                        <Setter Property="Visibility" Value="Visible"></Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=First}" Value="False">
                                <Setter Property="Visibility" Value="Hidden"></Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Path.Style>

            </Path>
            <Path Grid.Column="1"
              StrokeThickness="10"
              Data="M 0,0 A 50,50 90 0 1 50,50"
              Stroke="{Binding ElementName=this, Path=Foreground}"
              Visibility="{Binding Path=Second, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=H}">
            </Path>
            <Path Grid.Column="1" Grid.Row="1"
              StrokeThickness="10"
              Data="M 50,0 A 50,50 90 0 1 0,50"
              Stroke="{Binding ElementName=this, Path=Foreground}"
              Visibility="{Binding Path=Third, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=H}">
            </Path>
            <Path Grid.Row="1"
              StrokeThickness="10"
              Data="M 50,50 A 50,50 90 0 1 0,0"
              Stroke="{Binding ElementName=this, Path=Foreground}"
              Visibility="{Binding Path=Fourth, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=H}">
            </Path>
        </Grid>
    </Viewbox>
</UserControl>