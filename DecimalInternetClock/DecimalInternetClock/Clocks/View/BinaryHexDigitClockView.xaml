<UserControl x:Class="DecimalInternetClock.Clocks.View.BinaryHexDigitClockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vw="clr-namespace:DecimalInternetClock.Clocks.View">
    <Viewbox>
        <Grid Height="175" Width="175">
            <vw:BinaryHexDigitView DataContext="{Binding Path=Hour}" />
            <vw:BinaryHexDigitView DataContext="{Binding Path=Hour}" Margin="{Binding Path=HourMargin}" />
            <vw:BinaryHexDigitView DataContext="{Binding Path=MinuteHi}" Margin="{Binding Path=MinuteHiMargin}" />
            <vw:BinaryHexDigitView DataContext="{Binding Path=MinuteLow}" Margin="{Binding Path=MinuteLowMargin}" />
            <vw:BinaryHexDigitView DataContext="{Binding Path=MinuteLow}" Margin="{Binding Path=MinuteLowMargin}" />
            <vw:BinaryHexDigitView DataContext="{Binding Path=Second}" Margin="{Binding Path=SecondMargin}" />
        </Grid>
    </Viewbox>
</UserControl>