<UserControl x:Class="DecimalInternetClock.Clocks.View.BinaryHexDigitClockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vw="clr-namespace:DecimalInternetClock.Clocks.View"

             >
    <Viewbox>
        <Grid Height="175" Width="175">
            <vw:BinaryHexDigitView DataContext="{Binding Path=Hour}" Margin="0"/>
            <vw:BinaryHexDigitView DataContext="{Binding Path=Hour}" Margin="0"/>
            <vw:BinaryHexDigitView DataContext="{Binding Path=MinuteHi}" Margin="10"/>
            <vw:BinaryHexDigitView DataContext="{Binding Path=MinuteLo}" Margin="20"/>
            <vw:BinaryHexDigitView DataContext="{Binding Path=MinuteLo}" Margin="20"/>
            <vw:BinaryHexDigitView DataContext="{Binding Path=Second}" Margin="30"/>
        </Grid>
    </Viewbox>
</UserControl>