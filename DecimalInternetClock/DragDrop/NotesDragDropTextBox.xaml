<UserControl x:Class="DragDrop.NotesDragDropTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
            <TextBlock x:Name="_tbDrop"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AllowDrop="True" TextWrapping="Wrap"
                 PreviewDragEnter="_tbDrop_DragEnter" PreviewDragLeave="_tbDrop_DragLeave" PreviewDrop="_tbDrop_Drop" TextDecorations="None"/>
    </Grid>
</UserControl>